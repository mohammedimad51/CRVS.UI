@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "RolesList";
}

<h1>Roles List</h1>
<a asp-action="CreateRole" class="btn btn-success"> Create New Role</a>

@foreach (var item in Model)
{
    

<div class="card">

<div class="card-header">
            <b> Role ID</b> @item.Id

</div>
       
<div class="card-body">
            <b> Role Name</b>  @item.Name
</div>
             
<div class="card-footer text-center" >
     <a asp-action="EditRole" class="btn btn-primary" asp-route-id="@item.Id" > Edit Role</a>
     <a asp-action="DeleteRole" class="btn btn-danger" asp-route-id="@item.Id" > Delete Role</a>

</div>
</div>
}
