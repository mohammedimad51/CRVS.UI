@model IEnumerable<HealthInstitution>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>



<div>

    <a asp-action="Create" asp-asp-controller="HealthInstitutions" class="btn btn-primary">Create new HealthInstitution</a>
    <a asp-action="Import" asp-asp-controller="HealthInstitutions" class="btn btn-warning ">Import</a>

</div>


<table class="table table-bordered table-hover">



    <tr>

     
        <th>@Html.DisplayNameFor(c=>c.HealthInstitutionName)</th>
        <th>@Html.DisplayNameFor(c=>c.GovernorateId)</th>
        <th>@Html.DisplayNameFor(c=>c.DohId)</th>
       
        <th>@Html.DisplayNameFor(c=>c.FacilityTypeId)</th>


    </tr>
    @foreach (var item in Model)
    {
        <tr>

            <td>  @item.HealthInstitutionName</td>
            <td>  @item.GovernorateId</td>
            <td>  @item.DohId</td>
            <td>  @item.FacilityTypeId</td>

        </tr>
        <tr>
         <td>
                <a asp-route-id="@item.HealthInstitutionId" class="btn btn-warning btn-sm" asp-action="Edit">Edit</a>
                <a asp-route-id="@item.HealthInstitutionId" class="btn btn-danger btn-sm" asp-action="Delete">Delete</a>
                <a asp-route-id="@item.HealthInstitutionId" class="btn btn-secondary btn-sm" asp-action="Details">Details</a>

                    </td>
                </tr>
    }

</table>





